<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalERJP.Views.CamaraPage"
              xmlns:tdr="clr-namespace:FinalERJP.Helpers"
             Title="{tdr:Translate Camara}">
    <ScrollView>
        <StackLayout Spacing="10" Padding="10">
            <Button x:Name="TomarFoto" Text="{tdr:Translate TomarFoto}"/>
            <Button x:Name="SeleccionarFoto" Text="{tdr:Translate VerFoto}"/>
            

            <Image x:Name="image"/>
        </StackLayout>
    </ScrollView>
</ContentPage>